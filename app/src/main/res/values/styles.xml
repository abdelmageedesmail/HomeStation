<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!--&lt;!&ndash; Hint color and label color in FALSE state &ndash;&gt;-->
        <!--<item name="android:textColorHint">#5F331E</item>-->
        <!--&lt;!&ndash; Label color in TRUE state and bar color FALSE and TRUE State &ndash;&gt;-->
        <!--<item name="colorAccent">#5F331E</item>-->
        <!--<item name="colorControlNormal">#FFF</item>-->
        <!--<item name="colorControlActivated">#ffff</item>-->

        <item name="colorControlNormal">#fff</item>
        <item name="colorControlActivated">#5F331E</item>
        <item name="colorControlHighlight">#5F331E</item>
    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#ffff</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">#FFF</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="customRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">
    </style>

</resources>
